-	write_unlock_bh(&fib6_walker_lock);
+	write_unlock_bh(&net->ipv6.fib6_walker_lock);
 }
 static __inline__ u32 fib6_new_sernum(struct net *net)
 {
@@ -290,12 +288,13 @@ static int fib6_dump_node(struct fib6_walker_t *w)
 
