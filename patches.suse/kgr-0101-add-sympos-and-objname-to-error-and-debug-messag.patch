+				kgr_get_objname(patch_fun), patch_fun->name,
+				patch_fun->sympos, patch_fun->loc_old, err);
 			return err;
 		}
 	}
@@ -659,8 +667,9 @@ static int kgr_switch_fops(struct kgr_pa
